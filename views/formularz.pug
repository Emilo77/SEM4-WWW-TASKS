doctype html
head
    meta(charset='UTF-8')
    title Formularz rezerwacji
    link(rel='stylesheet' href='/../public/styles/formularz.css')
    script(src='/../form.js' defer='')

include common/navbar.pug

.form_and_array
    .form
        h1 Zarezerwuj wycieczkę
        form#form(action='/formularz/', method='POST')
            br
            .form_title
                label(for='imie') Imię:
                input#imie(type='text' placeholder='Podaj imię')
                #name-error
            .form_title
                label(for='nazwisko') Nazwisko:
                input#nazwisko(type='text' placeholder='Podaj nazwisko')
                #surname-error
            .form_title
                label(for='email') Adres email:
                input#email(type='email' placeholder='Podaj adres email')
            .form_title
                label(for='numer') Liczba zgłoszeń:
                output 0
                input#numer(type='range' min='0' max=wycieczka.liczba_dostepnych_miejsc value='0' step='1' oninput='this.previousElementSibling.value = this.value')
            if (wycieczka.liczba_dostepnych_miejsc > 0)
                input#submit-button.submit-button(type='submit' value='Prześlij')
            else
                p.submit-button.error_message_hidden Przykro nam, wszystkie miejsca na wycieczkę zostały już zarezerwowane.
                p.submit-button(type='submit' value='Prześlij' disabled='')
    .table
        h2 #{wycieczka.nazwa}
        table.tg
            thead
                tr
                    th.tg-0lax
                        b Start
                    th.tg-0lax
                        b Koniec
                    th.tg-0lax
                        b Cena za osobę
                    th.tg-0lax
                        b Dostępne miejsca

            tbody
                tr
                    td.tg-0lax=new Date(wycieczka.data_poczatku).toLocaleDateString()
                    td.tg-0lax=new Date(wycieczka.data_konca).toLocaleDateString()
                    td.tg-0lax=wycieczka.cena
                    td.tg-0lax=wycieczka.liczba_dostepnych_miejsc

#modal.modal
    .modal-content
        p#modal-text.modal-text
        button#modal-button.modal-button OK

include common/footer.pug
